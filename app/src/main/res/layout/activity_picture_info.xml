<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".solo_activities.PictureInfoActivity">


    <TextView
        android:id="@+id/tex1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/pictureDescription"

        android:text="Описание:\t"
        />

    <TextView
        android:id="@+id/tex2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@id/pictureGenres"
        android:text="Жанры:\t"
        />
    <TextView
        android:id="@+id/tex3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignBottom="@id/pictureStyles"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:text="Стили:\t"
        />


    <TextView
        android:id="@+id/pictureDescription"
        android:layout_toRightOf="@id/tex1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/background"

        android:text="descr"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        />

    <Button
        android:id="@+id/pictureArtistButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/background"

        android:text="Создатель"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@id/pictureDescription"

        />

    <TextView
        android:id="@+id/pictureGenres"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/tex2"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/background"

        android:text="genres"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@id/pictureArtistButton"

        />

    <TextView
        android:id="@+id/pictureStyles"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/tex3"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:gravity="center"
        android:background="@color/background"

        android:text="styles"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@id/pictureGenres"

        />

    <ImageView
        android:id="@+id/pictureImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"


        android:layout_below="@id/pictureStyles"
        />

</RelativeLayout>