<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_menu.HomeFragmentAdverts">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_adverts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rel" />

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundLighter">

            <EditText
                android:id="@+id/searchAdversValueMin"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:hint="Цена от" />

            <EditText
                android:id="@+id/searchAdversValueMax"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/searchAdversValueMin"
                android:hint="Цена до" />

            <Button
                android:id="@+id/searchAdversGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/searchAdversValueMax"
                android:text="Выбрать\nжанры" />

            <Button
                android:id="@+id/searchAdversStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/searchAdversGenres"
                android:text="Выбрать\nстиль" />

            <TextView
                android:id="@+id/advertSearchShowGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/searchAdversGenres"
                android:text="Жанры: все"
                />
            <TextView
                android:id="@+id/advertSearchShowStyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стили: все"
                android:layout_below="@id/advertSearchShowGenres"

                />


        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>