<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".solo_activities.users.ClientProfileInfoActivity">


    <EditText
        android:id="@+id/profileClientMailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="MAIL"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"

        />


    <EditText
        android:id="@+id/profileClientNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="FULL NAME"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"

        android:layout_below="@+id/profileClientMailEdit"
        />



    <Button
        android:id="@+id/profileClientSaveEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentRight="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"

        android:layout_below="@+id/profileClientNameEdit"
        />


</RelativeLayout>