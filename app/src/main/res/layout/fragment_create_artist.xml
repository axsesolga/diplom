<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateArtistFragment">


    <EditText
        android:id="@+id/pictureUploadDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Описание"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        />

    <Button
        android:id="@+id/pictureSelectGenresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать жанры"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/pictureUploadDescription"
        />

    <TextView
        android:id="@+id/pictureShowGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбранные жанры: нет"
        android:layout_toRightOf="@id/pictureSelectGenresButton"
        android:layout_alignBaseline="@id/pictureSelectGenresButton"
        />

    <Button
        android:id="@+id/pictureSelectStylesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбрать стили"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/pictureSelectGenresButton"
        />

    <TextView
        android:id="@+id/pictureShowStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбранные стили: нет"
        android:layout_toRightOf="@id/pictureSelectStylesButton"
        android:layout_alignBaseline="@id/pictureSelectStylesButton"
        />

    <Button
        android:id="@+id/chooseFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Загрузить изображение"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/pictureSelectStylesButton"
        />

    <Button
        android:id="@+id/createPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/chooseFileButton"
        />

</RelativeLayout>