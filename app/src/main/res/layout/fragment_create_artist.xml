<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateArtistFragment">

    <EditText
        android:id="@+id/pictureUploadArtistId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="artist id"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"

        android:layout_alignParentTop="true"

        />

    <EditText
        android:id="@+id/pictureUploadDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="description"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/pictureUploadArtistId"
        />

    <EditText
        android:id="@+id/pictureUploadGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="genre id"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/pictureUploadDescription"
        />

    <EditText
        android:id="@+id/pictureUploadStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="style id"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/pictureUploadGenres"
        />

    <Button
        android:id="@+id/chooseFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose file"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/pictureUploadStyles"
        />

    <Button
        android:id="@+id/createPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/chooseFileButton"
        />

    <TextView
        android:id="@+id/filePath"
        android:layout_width="314dp"
        android:layout_height="270dp"
        android:layout_below="@+id/createPicture"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="24dp"
        android:hint="style id" />

</RelativeLayout>