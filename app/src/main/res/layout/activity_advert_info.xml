<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvertInfoActivity">

    <TextView
        android:id="@+id/advertId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"


        />


    <TextView
        android:id="@+id/advertDesiredValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/advertId"

        />


    <TextView
        android:id="@+id/advertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/advertDesiredValue"

        />

    <TextView
        android:id="@+id/advertDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/advertTitle"

        />

    <TextView
        android:id="@+id/advertAdditionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/advertDescription"

        />

    <TextView
        android:id="@+id/advertClientId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/advertAdditionalInfo"

        />

    <TextView
        android:id="@+id/advertListOfGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/advertClientId"

        />

    <TextView
        android:id="@+id/advertListOfStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="value"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/advertListOfGenres"

        />



</RelativeLayout>