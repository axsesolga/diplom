<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".solo_activities.users.ClientProfileInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/te1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_alignBottom="@id/profileClientUsername"

                android:text="Логин:\t"
                />

            <TextView
                android:id="@+id/te2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignBottom="@id/profileClientMail"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="Почта:\t"
                />
            <TextView
                android:id="@+id/te3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignBottom="@id/profileClientName"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="Имя:\t"
                />




            <EditText
                android:id="@+id/profileClientUsername"
                android:layout_width="match_parent"

                android:layout_toRightOf="@id/te1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"

                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@color/background"
                android:gravity="center"
                android:hint="USERNAME"
                android:textAlignment="center" />


            <EditText
                android:id="@+id/profileClientMail"
                android:layout_below="@id/profileClientUsername"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/te2"


                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"

                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@color/background"
                android:gravity="center"
                android:hint="EMAIL"
                android:textAlignment="center" />



            <EditText
                android:id="@+id/profileClientName"
                android:layout_below="@id/profileClientMail"
                android:layout_width="match_parent"
                android:layout_toRightOf="@id/te3"

                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"

                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:background="@color/background"
                android:gravity="center"
                android:hint="NAME"
                android:textAlignment="center" />



            <Button
                android:id="@+id/sendMessageClientButton"
                android:layout_below="@id/profileClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:text="Отправить сообщение"
                android:visibility="gone" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>