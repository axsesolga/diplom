        <activity android:name=".solo_activities.AdvertInfoActivity" />
        <activity android:name=".solo_activities.CreateAdvertActivity" />
        <activity android:name=".solo_activities.users.ArtistProfileInfoActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>